<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView android:id="@+id/tvConverter"
              android:layout_gravity="center|top"
              android:layout_width="wrap_content"
              android:textSize="24dp"
              android:layout_margin="10dp"
              android:layout_height="wrap_content"
              android:text="Converter "/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:orientation="horizontal">

        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:textSize="16sp"
                  android:layout_margin="10dp"
                  android:layout_height="wrap_content"
                  android:text="From"  />

        <Spinner android:id="@+id/spinnerConverterFrom"
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:textSize="18sp"
                 android:layout_margin="10dp"
                 android:layout_height="wrap_content">
        </Spinner>

        <EditText android:id="@+id/etFrom"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:inputType="number"
                  android:textSize="18sp"
                  android:layout_height="wrap_content"
                  android:hint="0.00"
                  android:gravity="center"/>
    </LinearLayout>



    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:orientation="horizontal">

        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:textSize="16sp"
                  android:layout_margin="10dp"
                  android:layout_height="wrap_content"
                  android:text="To"  />

        <Spinner android:id="@+id/spinnerConverterTo"
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:textSize="18sp"
                 android:layout_margin="10dp"
                 android:layout_height="wrap_content">
        </Spinner>

        <TextView android:id="@+id/etTo"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_marginTop="10dp"
                  android:textSize="18sp"
                  android:layout_height="wrap_content"
                  android:hint="0.00"
                  android:gravity="center"/>
    </LinearLayout>

    <Button android:id="@+id/btnConvert"
            android:text="Convert"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


</LinearLayout>